{
	"$schema": "http://schema.management.azure.com/schemas/2015-01-01/deploymentTemplate.json#",
	"contentVersion": "1.0.0.0",
	"parameters": {
		"factoryName": {
			"type": "string",
			"metadata": "Data Factory name",
			"defaultValue": "DFHichem1"
		},
		"AzureBlobStorage1_connectionString": {
			"type": "secureString",
			"metadata": "Secure string for 'connectionString' of 'AzureBlobStorage1'"
		},
		"HttpServer1_properties_typeProperties_url": {
			"type": "string",
			"defaultValue": "https://www.researchgate.net/"
		}
	},
	"variables": {
		"factoryId": "[concat('Microsoft.DataFactory/factories/', parameters('factoryName'))]"
	},
	"resources": [
		{
			"name": "[concat(parameters('factoryName'), '/AzureBlobStorage1')]",
			"type": "Microsoft.DataFactory/factories/linkedServices",
			"apiVersion": "2018-06-01",
			"properties": {
				"annotations": [],
				"type": "AzureBlobStorage",
				"typeProperties": {
					"connectionString": "[parameters('AzureBlobStorage1_connectionString')]"
				}
			},
			"dependsOn": []
		},
		{
			"name": "[concat(parameters('factoryName'), '/HttpServer1')]",
			"type": "Microsoft.DataFactory/factories/linkedServices",
			"apiVersion": "2018-06-01",
			"properties": {
				"annotations": [],
				"type": "HttpServer",
				"typeProperties": {
					"url": "[parameters('HttpServer1_properties_typeProperties_url')]",
					"enableServerCertificateValidation": true,
					"authenticationType": "Anonymous"
				}
			},
			"dependsOn": []
		},
		{
			"name": "[concat(parameters('factoryName'), '/DestinationDataset_pss')]",
			"type": "Microsoft.DataFactory/factories/datasets",
			"apiVersion": "2018-06-01",
			"properties": {
				"linkedServiceName": {
					"referenceName": "AzureBlobStorage1",
					"type": "LinkedServiceReference"
				},
				"annotations": [],
				"type": "Binary",
				"typeProperties": {
					"location": {
						"type": "AzureBlobStorageLocation",
						"fileName": "paper1.pdf",
						"container": "pdfs"
					}
				}
			},
			"dependsOn": [
				"[concat(variables('factoryId'), '/linkedServices/AzureBlobStorage1')]"
			]
		},
		{
			"name": "[concat(parameters('factoryName'), '/SourceDataset_pss')]",
			"type": "Microsoft.DataFactory/factories/datasets",
			"apiVersion": "2018-06-01",
			"properties": {
				"linkedServiceName": {
					"referenceName": "HttpServer1",
					"type": "LinkedServiceReference"
				},
				"annotations": [],
				"type": "Binary",
				"typeProperties": {
					"location": {
						"type": "HttpServerLocation",
						"relativeUrl": "profile/Said_Nadeem2/publication/340078234_CORONAVIRUS_COVID-19_AVAILABLE_FREE_LITERATURE_PROVIDED_BY_VARIOUS_COMPANIES_JOURNALS_AND_ORGANIZATIONS_AROUND_THE_WORLD_JOURNAL_OF_ONGOING_CHEMICAL_RESEARCH/links/5e83954aa6fdcca789e57d38/CORONAVIRUS-COVID-19-AVAILABLE-FREE-LITERATURE-PROVIDED-BY-VARIOUS-COMPANIES-JOURNALS-AND-ORGANIZATIONS-AROUND-THE-WORLD-JOURNAL-OF-ONGOING-CHEMICAL-RESEARCH.pdf"
					}
				}
			},
			"dependsOn": [
				"[concat(variables('factoryId'), '/linkedServices/HttpServer1')]"
			]
		},
		{
			"name": "[concat(parameters('factoryName'), '/CopyPDF_fromTheWeb')]",
			"type": "Microsoft.DataFactory/factories/pipelines",
			"apiVersion": "2018-06-01",
			"properties": {
				"description": "Connect to a website with free PDF to download a get a copy on the storage account",
				"activities": [
					{
						"name": "Copy_pss",
						"type": "Copy",
						"dependsOn": [],
						"policy": {
							"timeout": "7.00:00:00",
							"retry": 0,
							"retryIntervalInSeconds": 30,
							"secureOutput": false,
							"secureInput": false
						},
						"userProperties": [
							{
								"name": "Source",
								"value": "profile/Said_Nadeem2/publication/340078234_CORONAVIRUS_COVID-19_AVAILABLE_FREE_LITERATURE_PROVIDED_BY_VARIOUS_COMPANIES_JOURNALS_AND_ORGANIZATIONS_AROUND_THE_WORLD_JOURNAL_OF_ONGOING_CHEMICAL_RESEARCH/links/5e83954aa6fdcca789e57d38/CORONAVIRUS-COVID-19-AVAILABLE-FREE-LITERATURE-PROVIDED-BY-VARIOUS-COMPANIES-JOURNALS-AND-ORGANIZATIONS-AROUND-THE-WORLD-JOURNAL-OF-ONGOING-CHEMICAL-RESEARCH.pdf"
							},
							{
								"name": "Destination",
								"value": "pdfs//paper1.pdf"
							}
						],
						"typeProperties": {
							"source": {
								"type": "BinarySource",
								"storeSettings": {
									"type": "HttpReadSettings",
									"requestMethod": "GET"
								}
							},
							"sink": {
								"type": "BinarySink",
								"storeSettings": {
									"type": "AzureBlobStorageWriteSettings"
								}
							},
							"enableStaging": false
						},
						"inputs": [
							{
								"referenceName": "SourceDataset_pss",
								"type": "DatasetReference",
								"parameters": {}
							}
						],
						"outputs": [
							{
								"referenceName": "DestinationDataset_pss",
								"type": "DatasetReference",
								"parameters": {}
							}
						]
					}
				],
				"annotations": []
			},
			"dependsOn": [
				"[concat(variables('factoryId'), '/datasets/SourceDataset_pss')]",
				"[concat(variables('factoryId'), '/datasets/DestinationDataset_pss')]"
			]
		}
	]
}